<tr>

  <td>
  
   <%= image_tag product.product.image.tiny %>
  </td>
  <td>
    <h4><%= product.product.name %></h4>
    <br>
    <p><%= product.product.description %></p>
  </td>
  <td>
    <%= Money.ca_dollar(product.product.price).format %>
  </td>
  <td>
    <%= button_to remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger' do %> - <% end %>
    <%= product.quantity %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-success' do %> + <% end %>
  </td>
  <td>
    <%= Money.ca_dollar(product.product.price * product.quantity).format %>
  </td>
</tr>
